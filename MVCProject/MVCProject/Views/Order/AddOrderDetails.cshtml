@model Order
@{
    //ViewData["Title"] = "AddOrderDetails";
}

<h1>Order Details </h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <div class="form-group">
                <label asp-for="ShipDate" style="font-weight:bold;font-size:20px" class="text-info">   </label>
                <label style="font-weight:bold;font-size:20px"> : @Model.ShipDate</label>
            </div>
           
            <div class="form-group">
                <label asp-for="FirstName" style="font-weight:bold;font-size:20px" class="text-info">   </label>
                <label style="font-weight:bold;font-size:20px"> : @Model.FirstName</label>

               
            </div>
            <div class="form-group">
                <label asp-for="LastName" style="font-weight:bold;font-size:20px" class="text-info">   </label>
                <label style="font-weight:bold;font-size:20px"> : @Model.LastName</label>

            </div>
            <div class="form-group">
                <label asp-for="StreetAddress" style="font-weight:bold; font-size:20px" class="text-info">   </label>
                <label style="font-weight:bold;font-size:20px"> : @Model.StreetAddress</label>
               
            </div>
            <div class="form-group">
                <label asp-for="Phone" style="font-weight:bold; font-size:20px" class="text-info">   </label>
                <label style="font-weight:bold;font-size:20px"> : @Model.Phone</label>
               
            </div>
            <div class="form-group">
                <label asp-for="Email" style="font-weight:bold;font-size:20px" class="text-info">   </label>
                <label style="font-weight:bold;font-size:20px"> : @Model.Email</label>
               
            </div>
            <div class="form-group">
                <label asp-for="Totalprice" style="font-weight:bold;font-size:20px" class="text-info">   </label>
                <label style="font-weight:bold;font-size:20px"> : 100 </label>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AddOrder" class="btn btn-info py-3 px-5 mt-3">Back to List</a>
</div>
