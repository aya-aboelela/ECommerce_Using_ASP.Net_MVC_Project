@model MVCProject.Models.Produc_Supplier

@{
    ViewData["Title"] = "Edit";
    SelectList productList = new SelectList(ViewBag.products, "Id", "Name");
    SelectList supplierList = new SelectList(ViewBag.suppliers, "Id", "Name");
    SelectList categoryList = new SelectList(ViewBag.categories, "Id", "Name");
    SelectList subCategoryList = new SelectList(ViewBag.subCategories, "Id", "Name");
}
<hr />
<h3 class="text-info mt-5"> Edit Product</h3>
<hr />

<div class="editform">
    <div class="col-md-4">
        <form asp-action="Edit" class="bg-info mb-5">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="d-flex">
                 <div class="form-group mr-4">
                    <label asp-for="Quantity" class="control-label text-white"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Price" class="control-label text-white"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            </div>
           
           
                <div class="form-group mr-4">
                    <label asp-for="Image" class="control-label text-white"></label>
                    <input asp-for="Image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label text-white"></label>
                    <input asp-for="Description" style="width:460px" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

            
          
            <div class="d-flex">
                   <div class="form-group " >
                    <label asp-for="ProductId" class="control-label text-white"></label>
                    <select asp-for="ProductId" class="form-control custom-select" style="width:210px" asp-items="productList"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="SubCatId" class="control-label text-white"></label>
                    <select asp-for="SubCatId" class="form-control custom-select" style="width:220px" asp-items="subCategoryList"></select>
                <span asp-validation-for="SubCatId" class="text-danger"></span>
            </div>

            </div>
            <div class="d-flex">
                <div class="form-group mr-4">
                    <label asp-for="CatId" class="control-label text-white"></label>
                    <select asp-for="CatId" class="form-control custom-select"  asp-items="categoryList"></select>
                    <span asp-validation-for="CatId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label text-white"></label>
                    <select asp-for="SupplierId" class="form-control custom-select" asp-items="supplierList"></select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>

            </div>
         
           
            <div class="form-group savebtn d-flex justify-content-center align-content-center mt-4">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
        </form>
        <div>
            <p><a asp-action="GetAllProductSupplier" asp-controller="Settings" class="btn btn-info py-3 px-5 mt-3">Back To List</a></p>
        </div>
      
    </div>

</div>


<style>
    .savebtn{
       width: 120px;
    }
    .editform{
        display:flex;
        flex-wrap:wrap;
        justify-content: center;
     }
    
    label {
        color: rgb(212, 208, 208);
    }

    .form-group {
        margin-bottom: 1rem;
/*        display: grid;
*/    }
    .form-group input{
      
        border: 1px solid #17a2b8;
        border-radius: 12px;
    }

    form {
        border: 1px solid#17a2b8;
        border-radius: 5px;
        padding: 20px;
        width: 529px;
    }
</style>
