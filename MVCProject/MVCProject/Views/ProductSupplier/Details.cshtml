@model Produc_Supplier

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <main role="main" class="pb-3 d-flex mt-5">
        <div class="col-lg-6 mb-5 ftco-animate">
            <a href="/images/@Model.Image" class="image-popup"><img src="/images/@Model.Image" class="img-fluid" alt="Colorlib Template"></a>
        </div>
        <div class="col-lg-6 product-details pl-md-5 ftco-animate">
            <h3>@Model.Product.Name</h3>

            <p class="price"><span>EGP @Model.Price</span></p>
            <p>
                @Model.Description
            </p>
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="form-group d-flex">
                        <div class="select-wrap">
                            <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                            <select name="" id="" class="form-control">
                                <option value="">Small</option>
                                <option value="">Medium</option>
                                <option value="">Large</option>
                                <option value="">Extra Large</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="w-100"></div>
                <div class="w-100"></div>
                <div class="col-md-12">
                    <p style="color: #000;">@Model.Quantity Available</p>
                </div>
            </div>
            <div class="d-flex mt-5">
                <p><a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.Id" class="btn btn-info py-3 px-5 ml-4">Add to Cart</a></p>
                <p><a asp-action="index" asp-controller="Cart" class="btn btn-info py-3 px-5 mr-4">Show Cart</a></p>

            </div>
        </div>
    </main>
</div>


<hr />
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-5 col-md-6 col-12 pb-4" id="AllComm">
                <h3>Reviews</h3>

                @foreach (Comment item in ViewBag.Comments)
                {
                    <div class="comment mt-4 text-justify float-left">
                        <h4>@item.UserName</h4>
                        <br>
                        <p>@item.Text</p>
                    </div>
                }

            </div>

            <div class="col-lg-4 col-md-5 col-sm-4 offset-md-1 offset-sm-1 col-12 mt-4">
                <form id="algin-form">

                   @* <div class="form-group">
                        <label class="control-label" for="Name"> Name</label>
                        <input type="text" class="form form-control" id="Name" name="Name" />
                    </div>*@
                    <div class="form-group">

                        <textarea name="Comm" id="Comm" cols="30" rows="5" class="form-control" placeholder="Type comment..." style="background-color: black;"></textarea>

                    </div>
                    <div class="form-group">
                        <button type="button" id="post" class="btn" onclick="SendComment()">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Client HTML Browser call SignalR Hub RPC js -->
@section Scripts{

    <script src="~/lib/microsoft-signalr/signalr.min.js"></script>
    <script src="~/lib/microsoft-signalr/signalr.js"></script>

    <script>

        //1-declare hub "URL"
        var hub = new signalR.HubConnectionBuilder().withUrl("/ProductHub").build();

        //2-start connect as online client
        hub.start().then(function () {
            console.log("Connect Success");
        });

        //3-server fire event  notification ==>handel
        hub.on("NewCommentNotify", function (comment) {
            $("#AllComm").append('<div class= "comment mt-4 text-justify float-left">' + '<h4>' + comment.userName + '</h4>' + '<br>' + '<p>' + comment.text + '</p > ' + ' </div>')
        });

        //4-send data server
        function SendComment() {

            //let name = $("#Name").val();
            let comm = $("#Comm").val();

            console.log(comm);
            //call RPC from hub
            hub.invoke("WriteComment",comm, @Model.Id);

        }
    </script>

}
