@model MVCProject.Models.Supplier

@{
    ViewData["Title"] = "New";
    //SelectList ProductsupplierList = new SelectList(ViewBag.Produc-Suppliers, "Id", "Name");
    //SelectList subCategoryList = new SelectList(ViewBag.subCategories, "Id", "Name");
}
<hr />
<h3 class="text-info mt-5"> Add Supplier</h3>
<hr />
<div class="newform">
    <div class=" col-md-4">
        <form asp-action="New" class="bg-info">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label text-white"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Image" class="text-white"></label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label text-white"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label text-white"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label text-white"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
        </form>
        <div>
            <p><a asp-action="GetAllSuppliers" asp-controller="Settings" class="btn btn-info py-3 px-5 mt-3">Back To List</a></p>
        </div>

    </div>
</div>
<style>
    .savebtn {
        width: 120px;
    }

    .newform {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    label {
        color: rgb(212, 208, 208);
    }

    .form-group {
        margin-bottom: 1rem;
        /*        display: grid;
            */
    }


        .form-group input {
            /*  background-color: #17a2b8;*/
            border: 1px solid #17a2b8;
            border-radius: 12px;
        }

    form {
        border: 1px solid#17a2b8;
        border-radius: 5px;
        padding: 20px;
        width: 400px;
    }
</style>
