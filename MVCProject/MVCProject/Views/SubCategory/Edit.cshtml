@model SubCategory
@{
    ViewData["Title"] = "Edit";
}
<hr />
<h1 class="text-info mt-5">Edit SubCategory</h1>
<hr />
<div class="editform ">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" class="bg-info">
            <div>
                <label for="Name" class="text-white">Name</label>
                <input type="text" name="Name" value="@Model.Name" id="Name" class="form form-control" />
            </div>

            <div>
                <label for="Image" class="text-white">Image</label>
                <input type="text" name="Image" value="@Model.Image" id="Image" class="form form-control" />
            </div>

            <div>
                <label for="CatId" class="text-white">Category</label>

                <select name="CatId" id="CatId" class="form-control">
                    @foreach (Category catItem in ViewBag.Categories)
                    {
                        if (Model.CatId == catItem.Id)
                        {
                            <option value="@catItem.Id" selected>@catItem.Name</option>
                        }
                        else
                        {
                            <option value="@catItem.Id">@catItem.Name</option>
                        }
                    }
                </select>
            </div>

            <input type="submit" value="Save" class="btn btn-secondary mt-4"/>

        </form>
        <div>
            <p><a asp-action="GetAllSubCategory" asp-controller="settings" class="btn btn-info py-3 px-5 mt-3">Back To List</a></p>
        </div>

    </div>

</div>




<style>
    .savebtn {
        width: 120px;
    }

    .editform {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    label {
        color: rgb(212, 208, 208);
    }

    .form-group {
        margin-bottom: 1rem;
        /*        display: grid;
        */
    }

        .form-group input {
            /*  background-color: #17a2b8;*/
            border: 1px solid #17a2b8;
            border-radius: 12px;
        }

    form {
        border: 1px solid#17a2b8;
        border-radius: 5px;
        padding: 20px;
        width: 529px;
    }
</style>




